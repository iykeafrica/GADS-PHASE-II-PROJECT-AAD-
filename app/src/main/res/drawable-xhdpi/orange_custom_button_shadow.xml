<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gray shadow. -->
    <item android:top="5dp"
        android:right="25dp" android:left="25dp">
        <shape>
            <solid android:color="@color/colorAsh7" />
<!--            <corners android:radius="25dp" />-->
            <corners android:radius="25dp"/>
        </shape>
    </item>
    <!-- White foreground. -->
    <item android:bottom="2dp" android:right="2dp" android:left="2dp">
        <shape>
            <solid android:color="@color/colorDarkOrange"/>
            <corners android:radius="25dp"/>
            <gradient android:startColor="@color/colorMediumLightOrange"
                android:centerColor="@color/colorDarkOrange"
                android:endColor="@color/colorDarkOrange"
                android:angle="-0"/>
        </shape>
    </item>
</layer-list>